<div class="burger" role="button" aria-label="Bouton menu-burger">
  <span></span>
</div>

<style lang="scss">
  @use "../styles/mixins" as *;

  .burger {
    z-index: 3;
    display: flex;
    align-items: center;
    height: 45px;
    width: 45px;
    padding: var(--padding-xs);
    border: 2px solid var(--secondary-50);
    border-radius: var(--radius-m);
    cursor: pointer;

    @media screen and (min-width: 680px) {
      display: none;
    }

    span,
    span::before,
    span::after {
      position: relative;
      display: block;
      width: 25px;
      height: 2px;
      border-radius: var(--radius-l);
      background-color: var(--secondary-50);
      transition: all 0.6s ease;
    }

    span::before,
    span::after {
      content: "";
      position: absolute;
      left: 0;
    }

    span::before {
      transform: translateY(-0.7rem);
    }

    span::after {
      transform: translateY(0.7rem);
    }

    &.burger--open {
      span {
        background: transparent;
        width: 0;
      }

      span::before {
        transform: rotate(45deg);
      }

      span::after {
        transform: rotate(-45deg);
      }
    }
  }
</style>
